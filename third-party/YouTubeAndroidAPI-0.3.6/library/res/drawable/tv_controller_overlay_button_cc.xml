<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true" >
    <layer-list>
      <item android:drawable="@drawable/tv_controller_overlay_button_background"/>
      <item>
        <bitmap android:src="@drawable/tv_control_cc_select" android:gravity="center" />
      </item>
    </layer-list>
  </item>

  <item android:state_checked="true" >
    <layer-list>
      <item android:drawable="@drawable/tv_controller_overlay_button_background"/>
      <item>
        <bitmap android:src="@drawable/tv_control_cc_on" android:gravity="center" />
      </item>
    </layer-list>
  </item>

  <item android:state_focused="false" >
    <layer-list>
      <item android:drawable="@drawable/tv_controller_overlay_button_background"/>
      <item>
        <bitmap android:src="@drawable/tv_control_cc" android:gravity="center" />
      </item>
    </layer-list>
  </item>

  <item android:state_focused="true" >
    <layer-list>
      <item android:drawable="@drawable/tv_controller_overlay_button_background"/>
      <item>
        <bitmap android:src="@drawable/tv_control_cc_select" android:gravity="center" />
      </item>
    </layer-list>
  </item>

</selector>
