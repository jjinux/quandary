<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_controls_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TvControllerOverlay">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:progressDrawable="@drawable/tv_scrubber"
            android:minHeight="0dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button android:id="@+id/back"
                style="@style/TvControllerOverlayButton"
                android:background="@drawable/tv_controller_overlay_button_back" />

            <Button android:id="@+id/rewind"
                style="@style/TvControllerOverlayButton"
                android:background="@drawable/tv_controller_overlay_button_rewind" />

            <ToggleButton android:id="@+id/play"
                style="@style/TvControllerOverlayButton"
                android:background="@drawable/tv_controller_overlay_button_play" />

            <Button android:id="@+id/fastforward"
                style="@style/TvControllerOverlayButton"
                android:background="@drawable/tv_controller_overlay_button_fastforward" />

            <Button android:id="@+id/forward"
                style="@style/TvControllerOverlayButton"
                android:background="@drawable/tv_controller_overlay_button_forward" />

            <ImageView android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tv_panel_player_divider" />

            <LinearLayout android:id="@+id/extra_buttons_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

            <ToggleButton android:id="@+id/cc"
                style="@style/TvControllerOverlayButton"
                android:background="@drawable/tv_controller_overlay_button_cc" />

            <Button android:id="@+id/home"
                style="@style/TvControllerOverlayButton"
                android:background="@drawable/tv_controller_overlay_button_home" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            >

          <TextView
              android:id="@+id/current_time"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="left"
              android:textColor="@color/text_tv_regular"
              android:textSize="11dp"
              android:shadowColor="@color/black"
              android:shadowDx="1"
              android:shadowDy="1"
              android:shadowRadius="1"
              />

          <TextView
              android:id="@+id/total_time"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="right"
              android:textColor="@color/text_tv_less_grey"
              android:textSize="11dp"
              android:shadowColor="@color/black"
              android:shadowDx="1"
              android:shadowDy="1"
              android:shadowRadius="1"
              />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
